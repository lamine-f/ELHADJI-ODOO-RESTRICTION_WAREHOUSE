<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Formulaire pour ajouter le champ warehouse_id aux emplacements -->
        <record id="stock_location_form_warehouse" model="ir.ui.view">
            <field name="name">stock.location.form.warehouse</field>
            <field name="model">stock.location</field>
            <field name="inherit_id" ref="stock.view_location_form"/>
            <field name="arch" type="xml">
                <field name="usage" position="after">
                    <field name="transit_warehouse_id" widget="radio" readonly="0"
                           invisible="usage != 'transit'">
                        <attribute name="required">usage == 'transit'</attribute>
                    </field>
                </field>
            </field>
        </record>
    </data>
</odoo>
